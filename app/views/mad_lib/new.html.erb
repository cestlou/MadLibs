          <label>Verb (3)</label>
            <input type="text">
          </div>
        <!-- end repeat -->
        <!-- submit -->
        <div class="small-12 columns">
          <h3>Step #3:</h3>
          <%= submit_tag "Generate Space MadLib", class: "large button"%>
			  </div>
      </div>
    <% end %>
	</section>
</section>
